{
  "manifest_version": 2,
  "name": "DeepL for Safari",
  "version": "1.0",
  "description": "Translate text using DeepL API",
  "permissions": [
    "activeTab",
    "https://api.deepl.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png"
  }
}
